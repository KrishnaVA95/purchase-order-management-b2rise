{
    "[development]": {
        "requires": {
            "db": {
                "kind": "sqlite",
                "credentials": {
                    "database": "sqlite.db"
                }
            },
            "swapi": {
                "kind": "rest",
                "credentials": {
                    "url": "https://swapi.dev/api"
                }
            },
            "auth": {
                "kind": "basic-auth",
                "users": {
                    "dummy": {
                        "password": "dummy",
                        "roles": [
                            "ROLE_DUMMY_ADMIN"
                        ],
                        "userAttributes": {
                            "email": ["dummy@dummy.com"],
                            "Groups": ["DUMMY_GROUPS"]
                        }
                    },
                    "test": {
                        "password": "test",
                        "roles": [
                            "ROLE_TEST_USER"
                        ],
                        "userAttributes": {
                            "email": ["test@test.com"],
                            "Groups": ["TEST_GROUPS"]
                        }
                    }
                }
            }
        }
    }
}
